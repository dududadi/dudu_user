.section {
    height: 40px;
    width: 100%;
    margin-top: 40rpx;
}

.section input {
    width: 90%;
    margin: 5px auto;
    border: 1px solid #c3c3c3;
    height: 30px;
    border-radius: 3px;
    padding: 0 5px;
}

.text_box {
    margin: 10px 25px;
    border-bottom: 1px solid #c3c3c3;
    padding-bottom: 10px;
}

.button {
    background-color: #e67f02;
    border: none;
    margin: 50rpx;
    margin-top: 100rpx;
    color: white;
}

.shade {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 10;
}

.hintBox {
    position: fixed;
    left: 50%;
    top: 50%;
    width: 550rpx;
    height: 300rpx;
    border-radius: 10rpx;
    background-color: #fff;
    z-index: 11;
    margin-left: -275rpx;
    margin-top: -150rpx;
    text-align: center;
    line-height: 100rpx;
}

.hideAtt {
    display: none;
}

.rmOrder {
    width: 200rpx;
    font-size: 14px;
    background-color: #e67f02;
    border: none;
    color: white;
}


.tdl, .tdr {
    width: 25%;
    /* background: red; */
    justify-content: center;
    text-align: right;
    padding: 5rpx;
}

.tdr {
    text-align: left;
    width: 75%;
}
.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 1.5rem;
    /* background: green; */
    align-items: center;
    font-size: 14px;
}
.order-tips{
  margin: 0 auto;
  width: 20rem;
  text-align: center;
}

.order-view{
  margin: 0;
  padding: 0;
}

.order-border{
  margin: 0 auto;
  border-top:1px solid #f8f8f8; 
  width: 100%;
  height: 550rpx;
  /* background: #ffff66; */
  box-shadow:0rpx 0rpx 800rpx #f2eada inset; 
  border-bottom: 1px solid #d9d6c3; 
}

.order-title{
  width: 100%;
  height: 100rpx;
  /* background: #ffcc33; */
  padding: 30rpx;
}
.order-title>view{
  display: inline-block;
  vertical-align: middle;
}

.title-img{
  width: 100rpx;
  height: 100rpx;
}

.title-info{
  width: 400rpx;
  padding-left: 20rpx;
  font-size: 15px;
  line-height: 20px;
}
.title-info>text{
  display: block;
}

.title-stave{
  width: 150rpx;
  font-size: 14px;
  font-weight: bold;
  color: #333;
}


.order-footer{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
 
.footer-btn{
  width: 200rpx;
  height: 60rpx;
  font-size: 12px;
  float: right;
  margin-right: 50rpx;
  line-height: 60rpx;
}

.icon{
  width: 40px;
  height: 40px;
}

.order-tips{
  margin: 0 auto;
  width: 20rem;
  text-align: center;
}

.order-view{
  margin: 0;
  padding: 0;
}

.order-border{
  margin: 0 auto;
  border-top:1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;  
  width: 20rem;
  height: 220px;
}

.order-title{
  width: 20rem;
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid beige;
}
.order-title>view{
  display: inline-block;
  vertical-align: middle;
}

.title-img{
  width: 40px;
  height: 40px;
  padding-left:10px; 
}

.title-info{
  width: 220px;
  padding-left: 10px;
  font-size: 12px;
  line-height: 20px;
}
.title-info>text{
  display: block;
}

.title-stave{
  width: 70px;
  font-size: 14px;
}


.order-footer{
  border-top: 1px solid beige;
}

.footer-btn{
  width: 80px;
  height: 30px;
  font-size: 12px;
  float: right;
  line-height: 30px;
}

.icon{
  width: 40px;
  height: 40px;
}